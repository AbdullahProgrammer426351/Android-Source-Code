<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".SharedActivity">

    <ImageView
        android:id="@+id/Logo_image_big"
        android:layout_width="214dp"
        android:layout_height="192dp"
        android:layout_marginTop="52dp"
        android:transitionName="imageTransition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_white" />

    <TextView
        android:id="@+id/headingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:transitionName="nameTransition"
        android:layout_marginTop="56dp"
        android:textColor="@color/white"
        android:text="This Company"
        app:layout_constraintEnd_toEndOf="@+id/Logo_image_big"
        app:layout_constraintStart_toStartOf="@+id/Logo_image_big"
        app:layout_constraintTop_toBottomOf="@+id/Logo_image_big" />

    <TextView
        android:id="@+id/slogan_text_view"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:transitionName="sloganTransition"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        android:text="This is a complete slogan of this activity where it is the dreat company for android development. This is a complete slogan of this activity where it is the dreat company for android development. This is a complete slogan of this activity where it is the dreat company for android development"
        app:layout_constraintEnd_toEndOf="@+id/headingText"
        app:layout_constraintStart_toStartOf="@+id/headingText"
        app:layout_constraintTop_toBottomOf="@+id/headingText" />
</androidx.constraintlayout.widget.ConstraintLayout>